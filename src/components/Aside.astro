    /* src/styles/custom.css */
    @keyframes slide-out-left {
    from {
        transform: translateX(0);
        opacity: 1;
    }
    to {
        transform: translateX(100%);
        opacity: 0;
    }
    }

    .slide-out-left {
    animation: slide-out-left 0.5s forwards;
    }
</style>