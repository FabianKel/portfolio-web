<script>
	document.addEventListener('DOMContentLoaded', () => {
  const toggleButton = document.getElementById('hideButton');
  const componente = document.getElementById('asideC');

  if (toggleButton && componente) {
    toggleButton.addEventListener('click', () => {
      if (componente.classList.contains('hidden')) {
        // Mostrar el componente
        componente.classList.remove('hidden', 'slide-out-left');
      } else {
        // Ocultar el componente con animación
        componente.classList.add('slide-out-left');
        // Usar un timeout para añadir la clase 'hidden' después de la animación
        setTimeout(() => {
          componente.classList.add('hidden');
        }, 500); // Tiempo en ms que dura la animación (0.5s)
      }
    });
  }
});
</script>


<style>
    nav{
        color: #FFD948;
        background-color: #24203D;
    }
    a{
        font-weight: 700;
