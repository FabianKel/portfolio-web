---

export interface Props {
  icon?: any; 
  text: string;
  color?: string;
}

const { icon: Icon, text, color} = Astro.props;
---

<div class="shadow-md rounded-lg overflow-hidden bg-tag py-2 px-5 flex flex-row items-center">
  <span class="icon"><Icon/></span>
  {text && (
    <span class="text-text ml-2">{ text }</span>
  )}
  
</div>

